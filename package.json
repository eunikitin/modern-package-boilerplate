{
  "name": "modern-package-boilerplate",
  "version": "2.3.4",
  "description": "Powerfull, flexible and easy-to-use boilerplate for creating modern npm packages. Features: rollup, babel, react (optional), flow (optional), jest, enzyme, eslint, travis-ci, coveralls, renovate",
  "keywords": [
    "npm-package",
    "package",
    "npm",
    "boilerplate",
    "rollup",
    "babel",
    "react",
    "flow",
    "jest",
    "enzyme",
    "eslint",
    "travis",
    "travis-ci",
    "coveralls",
    "renovate"
  ],
  "license": "MIT",
  "author": "Eugene Nikitin",
  "homepage": "http://github.com/eunikitin/modern-package-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "http://github.com/eunikitin/modern-package-boilerplate.git"
  },
  "bugs": {
    "mail": "eu.nikitin@gmail.com",
    "url": "http://github.com/eunikitin/modern-package-boilerplate/issues"
  },
  "main": "lib/index.js",
  "scripts": {
    "gulp": "gulp --gulpfile ./internals/configs/gulpfile.babel.js --require babel-register --cwd ./",
    "clean": "npm run gulp clean",
    "dev": "npm run gulp build:dev",
    "build": "npm run gulp build:prod",
    "test": "npm run gulp test",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cover": "npm run gulp cover",
    "coveralls": "npm run test:cover && cat ./coverage/lcov.info | coveralls",
    "flow": "npm run gulp flow",
    "flow-typed": "npm run gulp flow-typed",
    "lint": "npm run gulp lint",
    "prepublish": "npm run clean && npm run test && npm run flow && npm run lint && npm run build"
  },
  "peerDependencies": {
    "react": "^15 || ^16",
    "react-dom": "^15 || ^16"
  },
  "dependencies": {
    "gulp-jest": "^4.0.2",
    "jest-cli": "^23.0.0"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "browser-sync": "2.26.3",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.0",
    "eslint": "5.10.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.87.0",
    "flow-typed": "2.5.1",
    "fs-file-tree": "1.0.6",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-eslint": "5.0.0",
    "gulp-run": "1.7.1",
    "jest": "23.6.0",
    "merge-deep": "3.0.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "rimraf": "2.6.2",
    "rollup": "0.67.4",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-uglify": "6.0.0"
  }
}
